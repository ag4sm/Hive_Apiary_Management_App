{% extends 'base.html.j2' %}
{% block title %}
Hives
{% endblock %}

{% block content %}
<div class="body">
<h2>Add Hives</h2>
<form class="container" id="form" action="{{url_for('main.hive')}}" method = "POST">

  {{form.hidden_tag()}}
  <div>
  {{form.hive_name.label(class="form-label")}}
  {{form.hive_name(class="form-control")}}
  {% for error in form.hive_name.errors %}
    <small style="color:red;">{{error}}</small>
  {% endfor %}
  </div>
  <br>
  <div>
  {{form.numOfDeeps.label(class="form-label")}}
  {{form.numOfDeeps(class="form-control")}}
  {% for error in form.numOfDeeps.errors %}
    <small style="color:red;">{{error}}</small>
  {% endfor %}
  </div>
  <br>
  <div>
  {{form.numOfMediums.label(class="form-label")}}
  {{form.numOfMediums(class="form-control")}}
  {% for error in form.numOfMediums.errors %}
    <small style="color:red;">{{error}}</small>
  {% endfor %}
  </div>
  <br>
  <div>
  {{form.numOfShallows.label(class="form-label")}}
  {{form.numOfShallows(class="form-control")}}
  {% for error in form.numOfShallows.errors %}
    <small style="color:red;">{{error}}</small>
  {% endfor %}
  </div>
  <br>
  <div>
  {{form.notes.label(class="form-label")}}
  {{form.notes(class="form-control")}}
  {% for error in form.notes.errors %}
    <small style="color:red;">{{error}}</small>
  {% endfor %}
  </div>
  <br>
  <div>
  {{form.submit(class="btn btn-warning form-control")}}
  </div>
</form>
</div>

{% endblock %}

    
